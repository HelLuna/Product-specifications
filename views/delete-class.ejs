<%- include("_header") -%>

<h1 class="mt-2 mb-4">Удалить?</h1>

<form action="/delete-class/<%= model.class_id %>" method="post">
  <div class="form-horizontal">

    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="class_id">ID класса</label>
      <div class="col-sm-8">
        <input readonly class="form-control" id="class_id" name="class_id" value="<%= model.class_id %>"/>
      </div>
    </div>
    
    <div class="form-group row mt-3">
      <label class="col-form-label col-sm-2" for="name">Название</label>
      <div class="col-sm-8">
        <input readonly class="form-control" id="name" name="name" value="<%= model.name %>"/>
      </div>
    </div>
    
    <div class="form-group row mt-3">
      <label class="col-form-label col-sm-2" for="ei_id">Единица измерения</label>
      <div class="col-sm-7">
        <input readonly class="form-control" id="ei_id" name="ei_id" value="<%= model.ei_id %>"/>
      </div>
    </div>
    
    <div class="form-group row mt-3">
      <label class="col-form-label col-sm-2" for="parent_class_id">ID родителя</label>
      <div class="col-sm-8">
        <input readonly class="form-control" id="parent_class_id" name="parent_class_id" value="<%= model.parent_class_id %>"/>
      </div>
    </div>

    <div class="form-group row mt-3">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" name="action" value="Удалить" class="btn btn-default btn-danger" />
        <input type="submit" name="action" value="Удалить с потомками" class="btn btn-default btn-danger" />
        <a class="btn btn-outline-dark cancel" href="/classes">Обратно</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>