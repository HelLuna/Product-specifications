<div class="form-group row">
  <label class="col-form-label col-sm-2" for="ei_id">ID единицы измерения</label>
  <div class="col-sm-8">
    <input readonly class="form-control" id="ei_id" name="ei_id" value="<%= model.ei_id %>" placeholder="Заполнится автоматически" required/>
  </div>
</div>

<div class="form-group row mt-3">
  <label class="col-form-label col-sm-2" for="name">Название</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" id="name" name="name" value="<%= model.name %>" placeholder="Название, например, Объём" required/>
  </div>
</div>

<div class="form-group row mt-3">
  <label class="col-form-label col-sm-2" for="short_name">Короткое название</label>
  <div class="col-sm-7">
    <input class="form-control" id="short_name" name="short_name" value="<%= model.short_name %>" placeholder="ID ЕИ, например, м^3" required/>
  </div>
</div>

<div class="form-group row mt-3">
  <label class="col-form-label col-sm-2" for="code">Код</label>
  <div class="col-sm-8">
    <input class="form-control" id="code" name="code" value="<%= model.code %>" placeholder="Код ЕИ, например, 102" required/>
  </div>
</div>