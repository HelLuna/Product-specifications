<div class="form-group row">
  <label class="col-form-label col-sm-2" for="prod_id">ID изделия</label>
  <div class="col-sm-8">
    <input autofocus class="form-control" id="prod_id" name="prod_id" value="<%= model.prod_id %>" placeholder="Например, ДФ57" required/>
  </div>
</div>

<div class="form-group row mt-3">
  <label class="col-form-label col-sm-2" for="name">Название</label>
  <div class="col-sm-8">
    <input class="form-control" id="name" name="name" value="<%= model.name %>" placeholder="Название, например, Шайба 4x6" required/>
  </div>
</div>

<div class="form-group row mt-3">
  <label class="col-form-label col-sm-2" for="class_id">ID класса</label>
  <div class="col-sm-8">
    <input class="form-control" id="class_id" name="class_id" value="<%= model.class_id %>" placeholder="ID класса, например, 21"/>
  </div>
</div>