<%- include("_header") -%>

<form action="/find-cost/<%= model.prod_id %>" method="post">
  <div class="form-horizontal">

    <div class="form-group row mt-3">
        <label class="col-form-label col-sm-2" for="prod_id">ID</label>
        <div class="col-sm-8">
          <input readonly class="form-control" id="prod_id" name="prod_id" value="<%= model.prod_id %>" placeholder="Заполнится автоматически" required/>
        </div>
      </div>

      <div class="form-group row mt-3">
        <label class="col-form-label col-sm-2" for="amount">Количество</label>
        <div class="col-sm-8">
          <input class="form-control" id="amount" name="amount" placeholder="Кол-во" required/>
        </div>
      </div>

      <div class="form-group row mt-3">
        <label class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
          <input type="submit" value="Рассчитать" class="btn btn-default btn-success" />
          <a class="btn btn-outline-dark cancel" href="/specifications">Обратно</a>
        </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>