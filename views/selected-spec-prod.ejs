<%- include("_header") -%>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Позиция</th>
        <th>ID части</th>
        <th>Название части</th>
        <th>Количество</th>
        <th>ЕИ</th>
        <th class="d-print-none">Спецификация далее</th>
      </tr>
    </thead>
    <tbody>
      <% for (const tmp of model) { %>
        <tr>
          <td><%= tmp.result_pos_num %></td>
          <td><%= tmp.result_part_id %></td>
          <td><%= tmp.result_part_name %></td>
          <td><%= tmp.result_quantity %></td>
          <td><%= tmp.result_ei_name %></td>
          <td>
            <a class="btn btn-sm btn-info me-3" href="/selected-spec-prod/<%= tmp.result_part_id %>">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
              </svg>
            </a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <a class="btn btn-outline-dark cancel mt-3" href="/specifications">Обратно</a>
</div>

<%- include("_footer") -%>