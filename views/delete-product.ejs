<%- include("_header") -%>

<h1 class="mt-2 mb-4">Удалить?</h1>

<form action="/delete-product/<%= model.prod_id %>" method="post">
  <div class="form-horizontal">

    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="prod_id">ID изделия</label>
      <div class="col-sm-8">
        <input readonly class="form-control" id="prod_id" name="prod_id" value="<%= model.prod_id %>"/>
      </div>
    </div>
    
    <div class="form-group row mt-3">
      <label class="col-form-label col-sm-2" for="name">Название</label>
      <div class="col-sm-8">
        <input readonly class="form-control" id="name" name="name" value="<%= model.name %>"/>
      </div>
    </div>
    
    <div class="form-group row mt-3">
      <label class="col-form-label col-sm-2" for="class_id">ID класса</label>
      <div class="col-sm-8">
        <input readonly class="form-control" id="class_id" name="class_id" value="<%= model.class_id %>"/>
      </div>
    </div>

    <div class="form-group row mt-3">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" name="action" value="Удалить" class="btn btn-default btn-danger" />
        <a class="btn btn-outline-dark cancel" href="/products">Обратно</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") -%>